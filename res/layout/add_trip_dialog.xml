<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_trip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView 
            android:id="@+id/tv_trip_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/trip_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"/>
        
        <EditText
            android:id="@+id/etxt_trip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:hint="@string/add_trip_name"
            android:layout_below="@+id/tv_trip_name"
            android:inputType="textCapWords"
            android:textColor="@drawable/disable_color" />

        <ProgressBar
            android:id="@+id/pb_trip_name"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/etxt_trip_name"
            android:layout_alignEnd="@id/etxt_trip_name"
            android:layout_alignRight="@id/etxt_trip_name"
            android:layout_alignTop="@id/etxt_trip_name"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_trip_name"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/custom_button"
            android:enabled="false"
            android:text="@string/add" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/custom_button_cancel"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>